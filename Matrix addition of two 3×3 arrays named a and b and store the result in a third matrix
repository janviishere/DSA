#matrix addition of two 3Ã—3 arrays named a and b and store the result in a third matrix.

#include <iostream>
using namespace std;

class Matrix
{
    int mat[3][3];  
public:
    void inputMatrix(string name) 
    {
        cout << "Enter elements for Matrix " << name ;
        for (int i = 0; i < 3; i++) 
        {
            for (int j = 0; j < 3; j++)
            {
                cin >> mat[i][j];
            }
        }
    }

    void displayMatrix() 
    {
        for (int i = 0; i < 3; i++) 
        {
            for (int j = 0; j < 3; j++)
            {
                cout << mat[i][j] << " ";
            }
            cout << endl;
        }
    }

    Matrix add(Matrix m)
    {
        Matrix result;
        for (int i = 0; i < 3; i++) 
        {
            for (int j = 0; j < 3; j++) 
            {
                result.mat[i][j] = mat[i][j] + m.mat[i][j];
            }
        }
        return result;
    }
};

int main()
{
    Matrix A, B, Sum;

    A.inputMatrix("A: ");
    B.inputMatrix("B: ");

    Sum = A.add(B);
    cout << "\nResulting Matrix After Addition:\n";
    Sum.displayMatrix();

    return 0;
}
